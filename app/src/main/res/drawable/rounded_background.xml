<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Warna latar belakang -->
    <solid android:color="#80000000" /> <!-- Set transparansi 50% dengan warna hitam -->

    <!-- Radius sudut -->
    <corners android:radius="16dp" /> <!-- Radius membuat sudut membulat -->

    <!-- Padding untuk isi teks atau elemen di dalamnya -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Opsional: Outline atau border -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" /> <!-- Garis tepi berwarna putih -->
</shape>